@model libraryproject.ViewModels.BoSuuTap.BoSuuTapViewModel

@{
    ViewData["Title"] = "Xóa bộ sưu tập";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-fluid px-4">
    <h1 class="mt-4">@ViewData["Title"]</h1>

    <ol class="breadcrumb mb-4">
        <li class="breadcrumb-item"><a asp-controller="Admin" asp-action="Index">Dashboard</a></li>
        <li class="breadcrumb-item"><a asp-action="Index">Bộ sưu tập</a></li>
        <li class="breadcrumb-item active">Xóa</li>
    </ol>

    <div class="card mb-4">
        <div class="card-header">
            <i class="fas fa-trash me-1"></i>
            Xác nhận xóa bộ sưu tập
        </div>
        <div class="card-body">
            <div class="alert alert-danger">
                <h5 class="alert-heading">Cảnh báo!</h5>
                <p>Bạn có chắc chắn muốn xóa bộ sưu tập này không?</p>
                @if (Model.SoLuongTaiLieu > 0)
                {
                    <p class="mb-0"><strong>Lưu ý:</strong> Bộ sưu tập này hiện đang chứa @Model.SoLuongTaiLieu tài liệu. Bạn cần xóa các tài liệu trước khi xóa bộ sưu tập.</p>
                }
            </div>

            <div class="row">
                <div class="col-md-6">
                    <table class="table table-bordered">
                        <tr>
                            <th style="width: 30%">ID</th>
                            <td>@Model.ID</td>
                        </tr>
                        <tr>
                            <th>Tên bộ sưu tập</th>
                            <td>@Model.TenBoSuuTap</td>
                        </tr>
                        <tr>
                            <th>Mô tả</th>
                            <td>@(string.IsNullOrEmpty(Model.MoTa) ? "Không có" : Model.MoTa)</td>
                        </tr>
                        <tr>
                            <th>Số lượng tài liệu</th>
                            <td>@Model.SoLuongTaiLieu</td>
                        </tr>
                    </table>

                    <form asp-action="Delete" method="post">
                        <input type="hidden" asp-for="ID" />
                        <button type="submit" class="btn btn-danger" @(Model.SoLuongTaiLieu > 0 ? "disabled" : "")>
                            <i class="fas fa-trash me-1"></i> Xác nhận xóa
                        </button>
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="fas fa-arrow-left me-1"></i> Quay lại
                        </a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
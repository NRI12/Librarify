@model IEnumerable<libraryproject.ViewModels.BoSuuTap.BoSuuTapViewModel>

@{
    ViewData["Title"] = "Quản lý bộ sưu tập";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-fluid px-4">
    <h1 class="mt-4">@ViewData["Title"]</h1>

    <ol class="breadcrumb mb-4">
        <li class="breadcrumb-item"><a asp-controller="Admin" asp-action="Index">Dashboard</a></li>
        <li class="breadcrumb-item active">Bộ sưu tập</li>
    </ol>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="card mb-4">
        <div class="card-header d-flex justify-content-between align-items-center">
            <div>
                <i class="fas fa-layer-group me-1"></i>
                Danh sách bộ sưu tập
            </div>
            <a asp-action="Create" class="btn btn-primary">
                <i class="fas fa-plus"></i> Thêm mới
            </a>
        </div>
        <div class="card-body">
            <div class="row mb-3">
                <div class="col-md-6">
                    <form asp-action="Index" method="get" class="d-flex">
                        <input type="text" name="searchString" value="@ViewData["CurrentFilter"]" class="form-control me-2" placeholder="Tìm kiếm bộ sưu tập...">
                        <button type="submit" class="btn btn-primary">Tìm kiếm</button>
                    </form>
                </div>
            </div>

            @if (!Model.Any())
            {
                <div class="alert alert-info">
                    Không tìm thấy bộ sưu tập nào.
                </div>
            }
            else
            {
                <div class="table-responsive">
                    <table class="table table-bordered table-hover">
                        <thead class="table-light">
                            <tr>
                                <th>ID</th>
                                <th>
                                    <a asp-action="Index" asp-route-sortOrder="@ViewData["TenSortParam"]" asp-route-searchString="@ViewData["CurrentFilter"]" asp-route-page="@ViewBag.CurrentPage">
                                        Tên bộ sưu tập
                                        @if (string.IsNullOrEmpty((string)ViewData["TenSortParam"]))
                                        {
                                            <i class="fas fa-sort-up ms-1"></i>
                                        }
                                        else
                                        {
                                            <i class="fas fa-sort-down ms-1"></i>
                                        }
                                    </a>
                                </th>
                                <th>Mô tả</th>
                                <th>Số lượng tài liệu</th>
                                <th class="text-center">Thao tác</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.ID</td>
                                    <td>@item.TenBoSuuTap</td>
                                    <td>@(string.IsNullOrEmpty(item.MoTa) ? "Không có" : item.MoTa)</td>
                                    <td>@item.SoLuongTaiLieu</td>
                                    <td class="text-center">
                                        <a asp-action="Edit" asp-route-id="@item.ID" class="btn btn-primary btn-sm">
                                            <i class="fas fa-edit"></i> Sửa
                                        </a>
                                        <a asp-action="Details" asp-route-id="@item.ID" class="btn btn-info btn-sm">
                                            <i class="fas fa-info-circle"></i> Chi tiết
                                        </a>
                                        <a asp-action="Delete" asp-route-id="@item.ID" class="btn btn-danger btn-sm">
                                            <i class="fas fa-trash"></i> Xóa
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        Hiển thị @ViewBag.PageStart - @ViewBag.PageEnd của @ViewBag.TotalItems kết quả
                    </div>

                    <nav aria-label="Page navigation">
                        <ul class="pagination">
                            @if (ViewBag.HasPreviousPage)
                            {
                                <li class="page-item">
                                    <a class="page-link" asp-action="Index" asp-route-page="@(ViewBag.CurrentPage - 1)" asp-route-searchString="@ViewData["CurrentFilter"]" asp-route-sortOrder="@ViewData["TenSortParam"]">Trước</a>
                                </li>
                            }

                            @for (int i = Math.Max(1, ViewBag.CurrentPage - 2); i <= Math.Min(ViewBag.TotalPages, ViewBag.CurrentPage + 2); i++)
                            {
                                <li class="page-item @(i == ViewBag.CurrentPage ? "active" : "")">
                                    <a class="page-link" asp-action="Index" asp-route-page="@i" asp-route-searchString="@ViewData["CurrentFilter"]" asp-route-sortOrder="@ViewData["TenSortParam"]">@i</a>
                                </li>
                            }

                            @if (ViewBag.HasNextPage)
                            {
                                <li class="page-item">
                                    <a class="page-link" asp-action="Index" asp-route-page="@(ViewBag.CurrentPage + 1)" asp-route-searchString="@ViewData["CurrentFilter"]" asp-route-sortOrder="@ViewData["TenSortParam"]">Tiếp</a>
                                </li>
                            }
                        </ul>
                    </nav>
                </div>
            }
        </div>
    </div>
</div>
@model libraryproject.Models.PhieuMuon

@{
    ViewData["Title"] = "Chi tiết phiếu mượn";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-12">
            <h2>Chi tiết phiếu mượn #@Model.MaPhieuMuon</h2>
            <a href="javascript:history.back()" class="btn btn-outline-secondary mb-3">
                <i class="bi bi-arrow-left"></i> Quay lại
            </a>

            <div class="card mb-4">
                <div class="card-header bg-primary text-white">
                    <h5 class="card-title mb-0">Thông tin phiếu mượn</h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <table class="table table-borderless">
                                <tr>
                                    <th style="width: 40%">Mã phiếu mượn:</th>
                                    <td>@Model.MaPhieuMuon</td>
                                </tr>
                                <tr>
                                    <th>Ngày mượn:</th>
                                    <td>@Model.NgayMuon.ToString("dd/MM/yyyy")</td>
                                </tr>
                                <tr>
                                    <th>Ngày hẹn trả:</th>
                                    <td>@Model.NgayHenTra.ToString("dd/MM/yyyy")</td>
                                </tr>
                                <tr>
                                    <th>Trạng thái:</th>
                                    <td>
                                        @if (Model.TrangThai == "Đang mượn")
                                        {
                                            <span class="badge bg-warning text-dark">Đang mượn</span>
                                        }
                                        else if (Model.TrangThai == "Đã trả")
                                        {
                                            <span class="badge bg-success">Đã trả</span>
                                        }
                                        else if (Model.TrangThai == "Trả trễ")
                                        {
                                            <span class="badge bg-danger">Trả trễ</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-secondary">@Model.TrangThai</span>
                                        }
                                    </td>
                                </tr>
                            </table>
                        </div>
                        <div class="col-md-6">
                            <table class="table table-borderless">
                                <tr>
                                    <th style="width: 40%">Người mượn:</th>
                                    <td>@Model.NguoiDung.HoTen</td>
                                </tr>
                                <tr>
                                    <th>Mã bạn đọc:</th>
                                    <td>@Model.NguoiDung.MaBanDoc</td>
                                </tr>
                                <tr>
                                    <th>Nhân viên lập phiếu:</th>
                                    <td>@Model.NhanVien.HoTen</td>
                                </tr>
                                <tr>
                                    <th>Ghi chú:</th>
                                    <td>@(string.IsNullOrEmpty(Model.GhiChu) ? "Không có" : Model.GhiChu)</td>
                                </tr>
                            </table>
                        </div>
                    </div>
                </div>
            </div>

            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h5 class="card-title mb-0">Danh sách tài liệu</h5>
                </div>
                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table table-hover mb-0">
                            <thead class="table-light">
                                <tr>
                                    <th>STT</th>
                                    <th>Mã sách</th>
                                    <th>Tên sách</th>
                                    <th>Tác giả</th>
                                    <th>Ngày trả</th>
                                    <th>Trạng thái</th>
                                    <th>Tiền phạt</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.ChiTietPhieuMuons.Select((value, i) => new { i, value }))
                                {
                                    <tr>
                                        <td>@(item.i + 1)</td>
                                        <td>@item.value.TaiLieu.MaSach</td>
                                        <td>@item.value.TaiLieu.NhanDe</td>
                                        <td>@item.value.TaiLieu.TacGia</td>
                                        <td>
                                            @(item.value.NgayTra.HasValue ? item.value.NgayTra.Value.ToString("dd/MM/yyyy") : "Chưa trả")
                                        </td>
                                        <td>
                                            @if (item.value.TrangThai == "Đã trả")
                                            {
                                                <span class="badge bg-success">Đã trả</span>
                                            }
                                            else if (item.value.TrangThai == "Trả trễ")
                                            {
                                                <span class="badge bg-danger">Trả trễ</span>
                                            }
                                            else if (item.value.TrangThai == "Đang mượn")
                                            {
                                                <span class="badge bg-warning text-dark">Đang mượn</span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-secondary">@item.value.TrangThai</span>
                                            }
                                        </td>
                                        <td>
                                            @if (item.value.TienPhat.HasValue && item.value.TienPhat.Value > 0)
                                            {
                                                <span class="text-danger">@item.value.TienPhat.Value.ToString("N0") đ</span>
                                            }
                                            else
                                            {
                                                <span>0 đ</span>
                                            }
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
                @if (Model.ChiTietPhieuMuons.Any(c => c.TienPhat > 0))
                {
                    <div class="card-footer">
                        <div class="row">
                            <div class="col-md-6 offset-md-6 text-end">
                                <div class="fw-bold">
                                    Tổng tiền phạt:
                                    <span class="text-danger">
                                        @Model.ChiTietPhieuMuons.Sum(c => c.TienPhat ?? 0).ToString("N0") đ
                                    </span>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
@{
    ViewData["Title"] = ViewBag.TaiLieuTitle;
    Layout = "_LayoutFullScreen"; // Tạo một layout không có header/footer để đọc sách
}

<div class="container-fluid p-0">
    <div class="d-flex justify-content-between align-items-center bg-dark text-white p-2">
        <h5 class="m-0">@ViewBag.TaiLieuTitle</h5>
        <a href="javascript:history.back()" class="btn btn-outline-light btn-sm">
            <i class="bi bi-x-lg"></i> Đóng
        </a>
    </div>

    <div id="pdf-viewer" class="w-100" style="height: calc(100vh - 50px);">
        <object data="~/uploads/pdfs/@ViewBag.PdfPath" type="application/pdf" width="100%" height="100%">
            <p>
                Trình duyệt của bạn không hỗ trợ đọc PDF trực tiếp.
                <a href="~/uploads/pdfs/@ViewBag.PdfPath" download>Tải xuống PDF</a>.
            </p>
        </object>
    </div>
</div>
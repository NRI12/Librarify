@model libraryproject.ViewModels.TaiLieu.TaiLieuViewModel

@{
    ViewData["Title"] = "Xóa Tài liệu";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-fluid">
    <h1 class="mt-4">Xóa Tài liệu</h1>
    <ol class="breadcrumb mb-4">
        <li class="breadcrumb-item"><a href="/Admin">Trang chủ</a></li>
        <li class="breadcrumb-item"><a asp-action="Index">Quản lý Tài liệu</a></li>
        <li class="breadcrumb-item active">Xóa</li>
    </ol>

    <div class="card mb-4">
        <div class="card-header">
            <i class="fas fa-trash mr-1"></i>
            Xác nhận xóa Tài liệu
        </div>
        <div class="card-body">
            <div class="alert alert-danger">
                <h5>Bạn có chắc chắn muốn xóa tài liệu này?</h5>
                <p>Thao tác này không thể hoàn tác. Tất cả dữ liệu liên quan đến tài liệu này sẽ bị xóa.</p>
            </div>

            <div class="row">
                <div class="col-md-4">
                    @if (!string.IsNullOrEmpty(Model.HinhAnh))
                    {
                        <img src="/uploads/books/@Model.HinhAnh" alt="Hình ảnh sách" class="img-fluid mb-3" style="max-height: 200px;" />
                    }
                </div>
                <div class="col-md-8">
                    <h4>@Model.NhanDe</h4>
                    <dl class="row">
                        <dt class="col-sm-4">@Html.DisplayNameFor(model => model.MaSach)</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.MaSach)</dd>

                        <dt class="col-sm-4">@Html.DisplayNameFor(model => model.TacGia)</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.TacGia)</dd>

                        <dt class="col-sm-4">@Html.DisplayNameFor(model => model.NhaXuatBan)</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.NhaXuatBan)</dd>

                        <dt class="col-sm-4">@Html.DisplayNameFor(model => model.NamXuatBan)</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.NamXuatBan)</dd>

                        <dt class="col-sm-4">@Html.DisplayNameFor(model => model.TenBoSuuTap)</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.TenBoSuuTap)</dd>

                        <dt class="col-sm-4">@Html.DisplayNameFor(model => model.SoLuongNhapVe)</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.SoLuongNhapVe)</dd>

                        <dt class="col-sm-4">@Html.DisplayNameFor(model => model.SoLuongHienCo)</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.SoLuongHienCo)</dd>
                    </dl>
                </div>
            </div>

            <form asp-action="Delete" class="mt-3">
                <input type="hidden" asp-for="ID" />
                <button type="submit" class="btn btn-danger">
                    <i class="fas fa-trash"></i> Xác nhận xóa
                </button>
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="fas fa-arrow-left"></i> Quay lại
                </a>
            </form>
        </div>
    </div>
</div>